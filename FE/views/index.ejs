<!DOCTYPE html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Add New Cars</title>
        <!-- bootstrap 5 css -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <!-- custom css -->
        <!-- <link rel="stylesheet" href="style.css" /> -->
        <link
          rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
        />
        <link rel="stylesheet" href="/css/index.style.css">
      </head>
      <%- include ("partial/_navbar") -%> 
      

      <body>  
        <div class="p-1" id="main-content">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">cars</a></li>
              <li class="breadcrumb-item active" aria-current="page">list cars</li>
            </ol>
          </nav>
          <div class="viewListCars">
              <div class="content">
               
                  <p class="mb-4"></p>
                  <div class="filter">
                      <h4>List Cars <a href="add"><button class="btn-add btn-primary " > + Add New Cars</button></a></h4>
                      <button type="submit" class="btn btn-outline-primary">All</button>
                      <button type="submit" class="btn btn-outline-primary ms-2">Small</button>
                      <button type="submit" class="btn btn-outline-primary ms-2">Medium</button>
                      <button type="submit" class="btn btn-outline-primary ms-2">Large</button>
                  </div>
                  <div class="row mb-4 ">
                    <% data.forEach((element)=> {%>
                    <div class="col-4">
                      <div class="card mt-3 me-3">
                <img src="<%= element.foto %>" class="card-img-top" width="270" height="160" alt="...">
                <div class="card-body">
                    <p class="card-title"><%= element.namaMobil %> / <%= element.ukuran %></p>
                    <p class="card-price">Rp. <%= element.harga %> / hari</p>
                    <p class="card-upload text-muted"><img src="/img/fi_clock.svg" alt=""> Updated at <%= element.updatedAt %></p>
                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a href="/delete-car/<%= element.id %> "  class="btn btn-outline-danger btn-lg"><img class="icon" src="/img/fi_trash.svg" alt="" height="17">Delete</a>
                        <a href="/update/<%= element.id %> " class="btn btn-success btn-lg"><img class="icon" src="/img/fi_edit.svg" alt="" height="17">Edit</a>
                    </div>
                </div>
            </div>
                    </div>
                    <% }) %>
                  </div>
              </div>
          </div>
      </div>
        <%- include ("partial/_footer") -%> 
      </body>
    </html>
